    freezeBtn.TextColor3 = freeze and BTN_ON or BTN_OFF
end)
coroutine.wrap(function()
    while wait(0.5) do
        local tgt = Players:FindFirstChild(selected.Text)
        if tgt and tgt.Character and tgt.Character:FindFirstChild("HumanoidRootPart") then
