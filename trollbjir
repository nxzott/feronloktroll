    headBtn.TextColor3 = BTN_OFF
    spamchat = false
    chatBtn.Text = "Spam Chat: OFF"
    chatBtn.TextColor3 = BTN_OFF
    -- Normalisasi target:
    local tgt = Players:FindFirstChild(selected.Text)
    if tgt and tgt.Character then
        for _,v in pairs(tgt.Character:GetDescendants()) do
            if v:IsA("BasePart") then v.Transparency = 0 end
            if v:IsA("Decal") then v.Transparency = 0 end
        end
        if tgt.Character:FindFirstChild("HumanoidRootPart") then
            tgt.Character.HumanoidRootPart.Anchored = false
        end
    end
    statusText.Text = "All troll effect to "..(selected.Text or "target").." stopped."
end)

