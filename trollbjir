    loopJump = not loopJump
    jumpBtn.Text = "Spam Jump: " .. (loopJump and "ON" or "OFF")
    jumpBtn.TextColor3 = loopJump and BTN_ON or BTN_OFF
end)
coroutine.wrap(function()
    while wait(0.35) do
        if loopJump then
            local tgt = Players:FindFirstChild(selected.Text)
            if tgt and tgt.Character and tgt.Character:FindFirstChildOfClass("Humanoid") then
                tgt.Character.Humanoid.Jump = true
            end
        end
    end
end)()

