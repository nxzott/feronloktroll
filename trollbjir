    loopJump = false
    jumpBtn.Text = "Spam Jump: OFF"
    jumpBtn.TextColor3 = BTN_OFF
    loopSit = false
    sitBtn.Text = "Spam Sit: OFF"
    sitBtn.TextColor3 = BTN_OFF
    loopTp = false
